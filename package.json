{
  "name": "@cocos/ccbuild",
  "version": "2.0.1",
  "description": "The next generation of build tool for Cocos engine.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "deploy": "rush rebuild && node ./scripts/deploy.js",
    "change": "rush change",
    "version": "rush public -a",
    "api": "tsc && api-extractor run --local --verbose",
    "clean": "node ./scripts/clear.js",
    "test": "rush build && jest",
    "init-module": "node ./modules/modularize/lib/cli.js init"
  },
  "files": [
    "lib/src**/*",
    "static/**/*",
    "CHANGELOG.md",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cocos/cocos-ccbuild"
  },
  "keywords": [
    "cocos",
    "engine",
    "build",
    "compile"
  ],
  "author": "PP_Pro",
  "license": "MIT",
  "devDependencies": {
    "@types/resolve": "^1.20.2",
    "@changesets/cli": "^2.26.1",
    "@microsoft/api-extractor": "^7.34.4",
    "@types/babel__helper-module-imports": "^7.18.0",
    "@types/babel__preset-env": "^7.9.2",
    "@types/dedent": "^0.7.0",
    "@types/eslint": "^8.21.1",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "~7.2.0",
    "@types/jest": "^29.2.3",
    "del": "^6.1.1",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "@types/node": "~20.3.3",
    "@rollup/plugin-typescript": "~11.1.2"
  },
  "dependencies": {
    "@ccbuild/build-engine": "workspace:*",
    "@ccbuild/stats-query": "workspace:*",
    "@ccbuild/utils": "workspace:*",
    "@ccbuild/transformer": "workspace:*",
    "@ccbuild/modularize": "workspace:*",
    "@ccbuild/bundler": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "dedent": "^0.7.0",
    "eslint": "^8.34.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "fs-extra": "~11.1.1",
    "glob": "~7.2.0",
    "json5": "^2.2.3",
    "resolve": "^1.22.1",
    "typescript": "^4.3.5"
  }
}
